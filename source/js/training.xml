<?xml version="1.0" encoding="UTF-8"?>
<Module>
	<ModulePrefs title="Training Today?"
		     description="Visual Feedback on importance of training in
		     martial art. With the real photo of Bruce Lee and a
		     comical one for non training. No disrepect or harm meant."
		     height="300"
		     width="280"
		     thumbnail="http://uthcode.googlecode.com/svn/trunk/static/dragonsthumb.jpg"
		     screenshot="http://uthcode.googlecode.com/svn/trunk/static/BruceLeecard.jpg"
		     author="Senthil Kumaran"
		     author_email="orsenthil@gmail.com">
		     <Require feature="dynamic-height" /> 
	</ModulePrefs>
	<Content type="html">
		<![CDATA[
		<!-- JavaScript function by Vijayakumar -->
		<script>
			function callme(val)
			{
			var e = document.getElementById("img1");

			if (1 == val)
			e.src = "http://uthcode.googlecode.com/svn/trunk/static/BruceLeecard.jpg"
			else
			e.src = "http://uthcode.googlecode.com/svn/trunk/static/without_training.jpg"
			}
		</script>
		<form name="Training" action="">
			<center>
				<input type="button"
					style="background-color:transparent"
					value="I did."
					onClick="callme(1)" />
				<input type="button"
					style="background-color:transparent"
					value="I missed."
					onClick="callme(2)" />
				<br><br>
				<img id="img1" src="http://uthcode.googlecode.com/svn/trunk/static/dragons.jpg" />
			</center>
		</form>
		]]>
	</Content>
</Module>

